<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= simple_form_for @trip do |f| %>
        <%= f.input :start_date, html5: true %>
        <%= f.input :end_date, html5: true %>
        <%= f.input :country %>
        <%= f.input :description %>
        <%= f.submit class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
