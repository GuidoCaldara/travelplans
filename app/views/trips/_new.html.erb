

<div class="trip-form-container">
  <div class="">
    <div class="dashboard-header">
    <i class="fa fa-times close-form-icon" aria-hidden="true"></i>
    <div class="trip-info">
      <h1>Add A Trip</h1>
    </div>
  </div>
    <div class="form-wrapper">
      <%= simple_form_for trip, remote: true, authenticity_token: true do |f| %>
        <%= f.input :title %>
        <%= f.input :start_date, html5: true %>
        <%= f.input :end_date, html5: true %>
        <%= f.input :country %>
        <%= f.input :description %>
        <%= f.submit class:'btn btn-primary create-trip-btn' %>
      <% end %>
    </div>
  </div>
</div>
